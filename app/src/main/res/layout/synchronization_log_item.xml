<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/sync_log_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="14:00:01"
        android:textSize="@dimen/font_12"
        android:textColor="@color/colorHintDark"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/sync_log_item_message"
        android:layout_width="0dp"
        android:padding="2dp"
        android:textSize="@dimen/font_12"
        android:textColor="@color/colorHint"
        android:layout_height="wrap_content"
        tools:text="Синхронизация началась...  Обязательно нужно дождаться завершения процесса передачи данных"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/sync_log_item_date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>