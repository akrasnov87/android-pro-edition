<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="@color/colorHintDark"
                android:centerColor="@color/colorHint"
                android:centerY="0.75"
                android:endColor="@color/colorHintLight"
                android:angle="0" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/colorFloatingDark"
                    android:centerColor="@color/colorFloating"
                    android:centerY="0.75"
                    android:endColor="@color/colorFloatingLight"
                    android:angle="0" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/colorSuccessLight"
                    android:centerColor="@color/colorSuccess"
                    android:centerY="0.75"
                    android:endColor="@color/colorSuccessDark"
                    android:angle="0" />
            </shape>
        </clip>
    </item>
</layer-list>